.Message__box{data: {message: {id: message.id}}}
  .Message__info
    .Message__info-name
      = message.user.name
    .Message__info-date 
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .Message__content
    - if message.content.present?
      %p.Message__content-text
        = message.content
    = image_tag message.image.url, class: 'Message__content-image' if message.image.present?